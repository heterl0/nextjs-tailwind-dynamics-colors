# Vercel DDoS Protection Configuration
# Copy this to .env.local for local development

# Rate limiting (more lenient for Vercel free plan)
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_BLOCK_DURATION_MS=300000

# Throttling
THROTTLE_WINDOW_MS=1000

# IP reputation
MAX_VIOLATIONS=5
REPUTATION_DECAY_TIME_MS=1800000

# Debug mode (set to 'true' to enable debug logging)
DEBUG_DDOS=false

# Vercel specific
VERCEL_ENV=production 